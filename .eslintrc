{
  "extends": "airbnb-base",
  "rules": {
    "strict": 0,
    "comma-dangle": 1,
    "no-param-reassign": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "max-len": ["error", { "ignoreComments": true, "ignoreTemplateLiterals": true, "code": 120 }],
    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": true,
      "requireReturnDescription": true
    }],
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }]
  },
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}
